
@{
    ViewBag.Title = "Student Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text text-info">Student Home</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Profile &raquo;"), "Index", "Profile", null, new { @class = "btn btn-info" })
        </div>
        <div class="col-lg-3">
            @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Job Postings &raquo;"), "Index", "Jobs", null, new { @class = "btn btn-info" })
        </div>
    </div>

    
</div>