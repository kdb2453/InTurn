
@{
    ViewBag.Title = "Student Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-4">
        <h2>Profile</h2>
        
        <p>View and edit your Profile.</p>
        
        <p>@Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Go &raquo;"), "Index", "Students", new { area = "Students" }, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Job Postings</h2>
        
        <p>View job postings.</p>
        
        <p>@Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Go &raquo;"), "Index", "JobPostings", new { area = "Students" }, new { @class = "btn btn-default" })</p>
    </div>
    <div class="col-md-4">
        <h2>Jobs Applied For</h2>
        
        <p>View jobs you've applied for.</p>
        
        <p> @Html.ActionLink(HttpUtility.HtmlDecode("&laquo; Go &raquo;"), "Index", "JobsApplied", new { area = "Students" }, new { @class = "btn btn-default" })</p>
    </div>
</div>