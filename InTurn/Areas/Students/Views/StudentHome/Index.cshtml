@model InTurn_Model.Student

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Developer = "LC";
}

<center><h2>@Model.FullName  @ViewBag.Title</h2></center>

<div class="row">
    <center>
        <div class="col-md-4">

            @if (!String.IsNullOrEmpty(Model.ImageLocation))
            {
                <img src="@Href(Model.ImageLocation)" style="width:200px; height:180px; border:solid;" />
            }
        </div>
    </center>
</div>
<br />

<div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.FullName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PhoneNum)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PhoneNum)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Current)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Current)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Graduate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Graduate)
            </dd>
        </dl>
    </div>
    <div class="col-md-4">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ZipCode)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ZipCode)
            </dd>


        </dl>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", "Students", new { id = Model.StudentID }, null)
</p>


<h2>My Applications</h2>
<div id="studentContainer"></div>
<table class="table table-striped">

    <tr>
        <th>Employer</th>
        <th>Position</th>
        <th>Status</th>
        <th>@Html.ActionLink("Open Jobs", "Index", "JobPostings", new { area = "Students" }, new { @class = "nav-link" })</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Applications)
    {
        if (item.StudentID == Model.StudentID)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.JobPosting.Employer.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.JobPosting.Position)
                </td>
                <td>
                    @Html.DisplayFor(model => item.AppStatus)
                </td>
                <td> </td>
                <td>@Html.ActionLink("Details", "Details", "JobPostings", new { id = item.StudentID }, null) </td> @*not sure I like this here*@

            </tr>
        }
    }
</table>

