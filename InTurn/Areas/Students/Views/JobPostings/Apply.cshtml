@model InTurn_Model.Application

@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Developer = "TS";

}


@using (Html.BeginForm("Apply", "JobPostings", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="StudentID" value=@ViewBag.Student.StudentID>
    <input type="hidden" name="JobPostingID" value=@ViewBag.JobPosting.JobPostingID>

        
        <div class="form-horizontal">
            <h2>Application</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Student.FullName, "StudentID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <span>@ViewBag.Student.FullName</span>

                </div>
            </div>

            

            <div class="form-group">
                @Html.LabelFor(model => model.JobPostingID, "JobPostingID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*<span>@ViewBag.Employer.Name @ViewBag.JobPosting.Position</span>*@

                </div>
            </div>



            <div id="uploader" class="form-group">
                @Html.LabelFor(model => model.Resume, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.LabelFor(model => model.FileName, htmlAttributes: new { @class = "control-label" })
                    <input id="FileName" type="file" name="FileName" enctype="multipart/form-data">
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Apply" class="btn btn-default" />
                </div>
            </div>
        </div>
        

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        }
        <script type="text/javascript">
            function show(input) {
                if (input.files && input.files[0]) {
                    var filerdr = new filereader();
                    filerdr.onload = function (e) {
                        $('#filename').attr('src', e.target.result);
                    }
                    filerdr.readasdataurl(input.files[0]);
                }
            }
            
        </script>


