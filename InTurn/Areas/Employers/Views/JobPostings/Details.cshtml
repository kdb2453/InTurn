        <dd>
            @Html.DisplayFor(model => model.Days)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Hours)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hours)
        </dd>


    </dl>
</div>

<h3>Submitted</h3>
<div id="employeeContainer"></div>
<table class="table table-striped">

    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Status</th>
        <th>Resume</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Applications)
    {
        if (item.JobPostingID == Model.JobPostingID)
        {
            if (item.AppStatus == InTurn_Model.AppStatus.Submitted)

            {
                <tr>

                    <td>
                        @Html.DisplayFor(model => item.Student.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Student.LastName)
                    </td>
                    <td>@Html.DisplayFor(model => item.AppStatus)</td>
                    <td>
                        @if (System.IO.File.Exists(HttpContext.Current.Server.MapPath("~/FileUploads" + item.ApplicationID + ".docx")))
                        {
                            <a href="@Url.Content(String.Format("~/FileUploads" + item.ApplicationID + ".docx"))" download="@item.Student.FullName-Resume"><i class="fas fa-file-download fa-3x"></i></a>
                        }
                                    </td>
                    <td>@Html.ActionLink("See Application", "Details", "Applications", new { id = item.ApplicationID }, new { @class = "btn btn-info btn-xs" }) </td>

                </tr>
            }
        }

    }
</table>
