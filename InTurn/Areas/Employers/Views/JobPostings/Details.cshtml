<h2>Applicants for @Model.Position</h2>
<div id="employeeContainer"></div>
<table class="table table-striped">

    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Applications)
    {
        if (item.JobPostingID == Model.JobPostingID)
        {
            <tr>

                <td>
                    @Html.DisplayFor(model => item.Student.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Student.LastName)
                </td>
                <td>@Html.ActionLink("See Application", "Details","Applications", new {id=item.ApplicationID},null) </td>

            </tr>
        }
    }
</table>


<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.JobPostingID }) |
